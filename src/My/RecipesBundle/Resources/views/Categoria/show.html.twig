{% extends 'MyRecipesBundle:Default:base.html.twig' %}

{% block title %}{{ categoria.nombre }}{% endblock %}

{% block body %}
		<h1>{{ categoria.nombre }} </h1>
		<img class="uk-thumbnail" src="{{ asset('images/categorias/') ~ categoria.foto }}" alt="{{ categoria.nombre }}">
		<p>{{ categoria.descripcion }}</p>
		

		{% if is_granted('ROLE_USER') %}
    		<a class="uk-button uk-button-primary" href="{{ path('my_recipes_categoria_edit_id',{'id': categoria.id }) }}">{% trans %}Editar{% endtrans %}</a>
		{% endif %}
{% endblock %}