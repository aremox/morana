<!doctype html>
<html>
	<head>
		<title>{% block title %}Welcome!{% endblock %}</title>
		{% include 'MyRecipesBundle:Default:header.html.twig' %}
		<link rel="stylesheet" type="text/css" href="{{ asset('public/css/uikit.min.css')}}"/>

	</head>
	<body data-feedly-mini="yes">
		<div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">
		{% include 'MyRecipesBundle:Default:navBar.html.twig' %}
		{% block body %} {% include 'MyRecipesBundle:Default:indexCuerpo.html.twig' %} {% endblock %}
		{{ render(controller('MyRecipesBundle:Recipe:lastRecipes')) }}
		{% block footer %}{% include 'MyRecipesBundle:Default:footer.html.twig' %}{% endblock %}
		</div>
		{% block javascript %}
			{% javascripts 'public/js/*' filter='yui_js' %}
				<script type="text/javascript" src="{{ asset_url}}"></script>
			{% endjavascripts %}
		{% endblock %}
	</body>
</html>