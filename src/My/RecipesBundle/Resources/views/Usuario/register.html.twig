{# src/My/RecipesBundle/Resources/views/Categoria/create.html.twig #}
{% extends 'MyRecipesBundle:Default:base.html.twig' %}

{% block title %}Registro Usuario{% endblock %}

{% block body %}
   {{ form_start(form, {'attr' : { 'id' : 'author-create', 'class' : 'uk-form uk-form-horizontal'}}) }}
    {{ form_errors(form) }}
    	<fieldset data-uk-margin>
        <legend>Crear Usuario</legend>
     		<div class="uk-form-row">
            	{{ form_label(form.nombre, null, {'label_attr' : { 'class' : 'uk-form-label'}}) }}
            	{{ form_errors(form.nombre) }}
            	<div class="uk-form-controls">
            		{{ form_widget(form.nombre) }}
            	</div>
            </div>
            <div class="uk-form-row">
                {{ form_label(form.apellido1, null, {'label_attr' : { 'class' : 'uk-form-label'}}) }} 
                {{ form_errors(form.apellido1) }}
                <div class="uk-form-controls">
                    {{ form_widget(form.apellido1) }}
                </div>
            </div>
            <div class="uk-form-row">
                {{ form_label(form.apellido2, null, {'label_attr' : { 'class' : 'uk-form-label'}}) }} 
                {{ form_errors(form.apellido2) }}
                <div class="uk-form-controls">
                    {{ form_widget(form.apellido2) }}
                </div>
            </div>
            <div class="uk-form-row">
                {{ form_label(form.mail, null, {'label_attr' : { 'class' : 'uk-form-label'}}) }} 
                {{ form_errors(form.mail) }}
                <div class="uk-form-controls">
                    {{ form_widget(form.mail) }}
                </div>
            </div>
            <div class="uk-form-row">
                {{ form_label(form.plainPassword, null, {'label_attr' : { 'class' : 'uk-form-label'}}) }} 
                {{ form_errors(form.plainPassword) }}
                <div class="uk-form-controls">
                    {{ form_widget(form.plainPassword) }}
                </div>
            </div>
     		<div class="uk-form-row">
        	   {{ form_widget(form.Guardar, {'attr': {'class': 'uk-button'}}) }}
        	</div>
        </fieldset>
    {{ form_end(form) }}
{% endblock %}